<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="asymalaps.funnybiology.MainActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg1"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUNNY BIOLOGY QUIZ"
        android:textSize="25dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="#3E2723"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How Smart Are You?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90sp"
        android:textSize="20dp"
        android:textColor="#000"
        android:fontFamily="sans-serif-condensed"/>

    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/startlogo"/>

    <Button
        android:id="@+id/btn_selecttype"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="START"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400sp"
        android:background="#4E342E"
        android:textColor="#fff"
        android:onClick="intent"/>
</RelativeLayout>
