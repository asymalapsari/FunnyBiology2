<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="asymalaps.funnybiology.organism5"
    android:background="@drawable/bg4"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3E2723"
        android:fontFamily="sans-serif-condensed"
        android:text="ORGANISM QUIZ (5/5)"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_margin="20sp"/>

    <TextView
        android:textSize="17dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What do you know about Biology?"
        android:gravity="center"
        android:layout_margin="18sp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint="Answer here ..."/>

    <Button
        android:id="@+id/btn_next11"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_gravity="center"
        android:layout_margin="40sp"
        android:onClick="intent9"
        android:background="#A1887F"
        android:textColor="#fff"
        android:textStyle="bold"/>

</LinearLayout>
